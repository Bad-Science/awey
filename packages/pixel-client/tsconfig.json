{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./**/*.ts", "./**/*.tsx", "./*.ts", "../pixel-client/client.tsx", "../pixel-client/main.tsx", "../pixel-client/player.ts", "../pixel-client/shaders.ts", "../pixel-client/vite.config.ts", "../pixel-client/webgl.ts"],
    "exclude": ["node_modules"]
}